<div class="pagetitle">
    <h1>Appointment Details</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/Appointment">Appointments</a></li>
            <li class="breadcrumb-item active">Details</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="row">
        <div class="col-xl-8">
            <!-- Main Details Card -->
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="card-title">Appointment Information</h5>
                        <div class="d-flex gap-2">
                            <a href="/Appointment/Edit/1" class="btn btn-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <button class="btn btn-danger btn-sm" onclick="cancelAppointment(1)">
                                <i class="bi bi-x-circle"></i> Cancel
                            </button>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-lg-6">
                            <div class="info-group mb-3">
                                <label class="fw-bold">Appointment ID</label>
                                <p>#A001</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Date & Time</label>
                                <p>March 25, 2024 at 10:00 AM</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Type</label>
                                <p>Follow-up Consultation</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Status</label>
                                <p><span class="badge bg-warning">Scheduled</span></p>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="info-group mb-3">
                                <label class="fw-bold">Duration</label>
                                <p>30 minutes</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Room</label>
                                <p>Room 205 - Cardiology Department</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Created On</label>
                                <p>March 15, 2024</p>
                            </div>
                            <div class="info-group mb-3">
                                <label class="fw-bold">Last Updated</label>
                                <p>March 15, 2024</p>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <label class="fw-bold">Notes</label>
                        <p>Follow-up consultation for cardiac evaluation. Patient to bring previous test results.</p>
                    </div>
                </div>
            </div>

            <!-- Medical History Card -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Related Medical History</h5>
                    <div class="timeline">
                        <div class="timeline-item">
                            <div class="timeline-marker bg-primary"></div>
                            <div class="timeline-content">
                                <h6>Previous Appointment</h6>
                                <small class="text-muted">March 15, 2024 - Dr. Sarah Johnson</small>
                                <p>Routine checkup - Normal cardiac function observed</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4">
            <!-- Patient Information Card -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Patient Information</h5>
                    <div class="d-flex flex-column align-items-center">
                        <div class="avatar-lg mb-3">
                            <span class="avatar-title rounded-circle bg-primary text-white fs-2">
                                JS
                            </span>
                        </div>
                        <h6 class="mb-0">John Smith</h6>
                        <small class="text-muted mb-3">#P001</small>
                        <a href="/Patient/Details/1" class="btn btn-outline-primary btn-sm">View Full Profile</a>
                    </div>
                    <hr>
                    <div class="patient-details mt-3">
                        <div class="info-group mb-2">
                            <label class="fw-bold">Age</label>
                            <p>35 Years</p>
                        </div>
                        <div class="info-group mb-2">
                            <label class="fw-bold">Gender</label>
                            <p>Male</p>
                        </div>
                        <div class="info-group mb-2">
                            <label class="fw-bold">Phone</label>
                            <p>+1 234 567 8901</p>
                        </div>
                        <div class="info-group mb-2">
                            <label class="fw-bold">Email</label>
                            <p>john.smith@email.com</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Doctor Information Card -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Doctor Information</h5>
                    <div class="d-flex flex-column align-items-center">
                        <div class="avatar-lg mb-3">
                            <span class="avatar-title rounded-circle bg-info text-white fs-2">
                                SJ
                            </span>
                        </div>
                        <h6 class="mb-0">Dr. Sarah Johnson</h6>
                        <small class="text-muted mb-2">Cardiologist</small>
                        <a href="/Doctor/Details/1" class="btn btn-outline-info btn-sm">View Profile</a>
                    </div>
                    <hr>
                    <div class="doctor-details mt-3">
                        <div class="info-group mb-2">
                            <label class="fw-bold">Specialization</label>
                            <p>Cardiology</p>
                        </div>
                        <div class="info-group mb-2">
                            <label class="fw-bold">Experience</label>
                            <p>12 Years</p>
                        </div>
                        <div class="info-group mb-2">
                            <label class="fw-bold">Contact</label>
                            <p>+1 234 567 8902</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .avatar-lg {
        width: 80px;
        height: 80px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-title {
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .info-group label {
        display: block;
        margin-bottom: 0.2rem;
        color: #6c757d;
    }

    .info-group p {
        margin-bottom: 0;
    }

    .timeline {
        position: relative;
        padding-left: 2rem;
    }

    .timeline::before {
        content: '';
        position: absolute;
        left: 0.75rem;
        top: 0;
        bottom: 0;
        width: 2px;
        background-color: #dee2e6;
    }

    .timeline-item {
        position: relative;
        margin-bottom: 1.5rem;
    }

    .timeline-marker {
        position: absolute;
        left: -1.5rem;
        top: 0.25rem;
        width: 1rem;
        height: 1rem;
        border-radius: 50%;
        border: 2px solid #fff;
    }

    .timeline-content {
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.375rem;
    }
</style>

